{
  "name": "swagger_doc_sample",
  "version": "1.0.0",
  "scripts": {
    "swagger:build": "redoc-cli bundle swagger/openapi.yml --output docs/index.html",
    "refresh": "yarn cache clean -f && rm -r node_modules package-lock.json && yarn install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "swagger:build"
    }
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "redoc-cli": "^0.10.2"
  }
}
